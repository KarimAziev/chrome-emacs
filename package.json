{
  "name": "chrome-emacs",
  "description": "A Chrome extension for editing text areas in Emacs",
  "repository": {
    "type": "git",
    "url": "https://github.com/KarimAziev/chrome-emacs.git"
  },
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@ckeditor/ckeditor5-core": "^44.0.0",
    "@codemirror/view": "^6.25.1",
    "@types/ace": "^0.0.52",
    "@types/chrome": "^0.0.258",
    "@types/ckeditor4": "^4.20.7",
    "@types/codemirror": "^5.60.15",
    "@types/events": "^3.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.7",
    "@types/webpack": "^5.28.5",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.0.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "monaco-editor": "^0.45.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sass": "^1.74.1",
    "sass-loader": "^14.1.1",
    "string-replace-loader": "3.0.3",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0",
    "webpack-merge": "^5.10.0"
  },
  "scripts": {
    "clean": "rimraf ./chrome/scripts ./firefox/scripts",
    "predev": "npm run clean",
    "prebuild": "npm run clean",
    "prepublish": "npm run build",
    "build:chrome": "webpack --env target=chrome --mode production",
    "build:firefox": "webpack --env target=firefox --mode production",
    "build": "npm-run-all --parallel build:chrome build:firefox",
    "dev:chrome": "webpack --env target=chrome --watch",
    "dev:firefox": "webpack --env target=firefox --watch",
    "dev": "npm-run-all --parallel dev:chrome dev:firefox",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "codemirror": "^5.11.0",
    "diff-match-patch-es": "^1.0.1",
    "process": "^0.11.10",
    "uuid": "^9.0.1"
  }
}
